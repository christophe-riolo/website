{
  "name": "@thream/website",
  "version": "0.0.1",
  "description": "Thream's website to stay close with your friends and communities.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thream/website"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "scripts": {
    "dev:custom": "cross-env NODE_ENV=development node server",
    "start:custom": "cross-env NODE_ENV=production node server",
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "export": "next export",
    "lint": "ts-standard | snazzy",
    "format": "ts-standard --fix | snazzy",
    "release": "release-it",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "classnames": "^2.2.6",
    "express": "4.17.1",
    "express-http-to-https": "1.1.4",
    "fontsource-montserrat": "^3.0.9",
    "fontsource-roboto": "^3.0.3",
    "html-react-parser": "^0.14.0",
    "next": "9.5.5",
    "next-pwa": "3.1.5",
    "normalize.css": "^8.0.1",
    "react": "17.0.1",
    "react-component-form": "^1.2.0",
    "react-dom": "17.0.1",
    "react-infinite-scroll-component": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/classnames": "^2.2.10",
    "@types/node": "14.14.2",
    "@types/react": "16.9.53",
    "@types/styled-jsx": "2.2.8",
    "cross-env": "7.0.2",
    "husky": "^4.3.0",
    "release-it": "^14.2.0",
    "snazzy": "8.0.0",
    "ts-standard": "9.0.0",
    "typescript": "4.0.3"
  }
}
